@model ManageFleet.Application.ViewModels.VehicleListViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir Veículo</h2>

<h3>Tem certeza que deseja excluir esse veículo?</h3>

<hr />
<div class="alert alert-info">
    * Deletar um Veículo Existente
</div>
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-header">
            <h3 class="panel-title">Informações do Veículo</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3"><label class="control-label pull-right">@Html.DisplayNameFor(model => model.Id)</label></div>
                <div class="col-md-9">@Html.DisplayFor(model => model.Id)</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label class="control-label pull-right">@Html.DisplayNameFor(model => model.Chassi)</label></div>
                <div class="col-md-9">@Html.DisplayFor(model => model.Chassi)</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label class="control-label pull-right">@Html.DisplayNameFor(model => model.Color)</label></div>
                <div class="col-md-9">@Html.DisplayFor(model => model.Color)</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label class="control-label pull-right">@Html.DisplayNameFor(model => model.NomeTipoVeiculo)</label></div>
                <div class="col-md-9">@Html.DisplayFor(model => model.NomeTipoVeiculo)</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label class="control-label pull-right">@Html.DisplayNameFor(model => model.QuantidadePassageiros)</label></div>
                <div class="col-md-9">@Html.DisplayFor(model => model.QuantidadePassageiros)</div>
            </div>
        </div>
        <div class="panel-footer">
            <form asp-action="Delete" asp-route-id="@Model.Id">
                <a asp-action="Index" class="btn btn-info">
                    Voltar a Lista
                    <span title="Voltar a Lista" class="glyphicon glyphicon-circle-arrow-left"></span>
                </a>
                <button type="submit" class="btn btn-danger">
                    Excluir
                    <span title="Salvar" class="glyphicon glyphicon-pencil"></span>
                </button>
            </form>
        </div>
    </div>
</div>