@model ManageFleet.Application.ViewModels.VehicleViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Veículo</h2>
<hr />
<div class="alert alert-info">
    * Inserir um Veículo
</div>
<div class="panel panel-primary">
    <form asp-action="Create">
        <div class="panel-header">
            <h3 class="panel-title">Inserir Veículo</h3>
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Chassi" placeholder="" class="control-label"></label>
                        <input asp-for="Chassi" class="form-control" />
                        <span asp-validation-for="Chassi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleTypeId" class="control-label"></label>
                        <select asp-for="VehicleTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.VehicleTypes, "Id", "Description"))"></select>
                        <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <a asp-action="Index" class="btn btn-info">
                Voltar a Lista
                <span title="Voltar a Lista" class="glyphicon glyphicon-circle-arrow-left"></span>
            </a>
            <button type="submit" class="btn btn-primary">
                Salvar
                <span title="Salvar" class="glyphicon glyphicon-floppy-saved"></span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
