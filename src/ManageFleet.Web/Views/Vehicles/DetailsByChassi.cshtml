@model ManageFleet.Application.ViewModels.VehicleListViewModel

@{
    ViewData["Title"] = "Detalhes por Chassi";
}

<h2>Veículos</h2>
<hr />
<div class="alert alert-info">
    * Encontrar veículo por Chassi
</div>
<div class="panel panel-primary">
    <div class="panel-header">
        <h3 class="panel-title">Encontrar/Editar/Deletar Veículo</h3>
    </div>
    <div class="panel-body table-responsive no-padding">
        @if (Model != null && Model.Id == 0)
        {
            <div class="alert alert-danger">
                Veículo não encontrado
            </div>
        }

        <form asp-action="DetailsByChassi">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="chassi" class="control-label">Informe um Chassi para pesquisa</label>
                        <br />
                        <div class="col-md-8">
                            <input id="chassi" name="chassi" class="form-control" placeholder="Nº do Chassi" required />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary">
                                Pesquisar
                                <span title="Pesquisar" class="glyphicon glyphicon-search"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        @if (Model != null && Model.Id > 0)
        {
            <br />

            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("_DetailsByChassi", @Model)
                </div>
            </div>
        }
    </div>
    <div class="panel-footer">
        @if (Model != null && Model.Id > 0)
        {
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
                Detalhes do Veículo
                <span title="Detalhes" class="glyphicon glyphicon-search"></span>
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                Editar Veículo
                <span title="Editar" class="glyphicon glyphicon-pencil"></span>
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                Excluir Veículo
                <span title="Excluir" class="glyphicon glyphicon-trash"></span>
            </a>
        }

    </div>
</div>